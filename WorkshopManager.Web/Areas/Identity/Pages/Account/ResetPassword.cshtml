@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Zresetuj hasło";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                <p class="text-muted text-center mb-4">
                    Ustaw nowe hasło do swojego konta.
                </p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input asp-for="Input.Code" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Adres email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="jan.kowalski@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Nowe hasło</label>
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Wprowadź nowe hasło" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Hasło musi mieć minimum 6 znaków.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Potwierdź nowe hasło</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Potwierdź nowe hasło" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-primary btn-lg">
                        <i class="fas fa-key"></i> Zresetuj hasło
                    </button>
                </form>

                <div class="text-center mt-3">
                    <p>
                        <a asp-page="/Account/Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Powrót do logowania
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
