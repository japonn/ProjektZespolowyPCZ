@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Hasło zmienione!";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                </div>
                <h2 class="card-title mb-4">@ViewData["Title"]</h2>
                <p class="text-muted mb-4">
                    Twoje hasło zostało pomyślnie zresetowane.
                </p>
                <div class="alert alert-success">
                    <i class="fas fa-info-circle"></i>
                    Możesz teraz zalogować się używając nowego hasła.
                </div>
                <div class="mt-4">
                    <a asp-page="./Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Zaloguj się
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
