@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Zapomniałeś hasła?";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                <p class="text-muted text-center mb-4">
                    Podaj adres email, na który zarejestrowałeś swoje konto.
                    Wyślemy Ci link do zresetowania hasła.
                </p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Adres email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="jan.kowalski@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-primary btn-lg">
                        <i class="fas fa-envelope"></i> Wyślij link resetujący
                    </button>
                </form>

                <div class="text-center mt-3">
                    <p>
                        <a asp-page="/Account/Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Powrót do logowania
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
