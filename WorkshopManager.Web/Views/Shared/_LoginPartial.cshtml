@using Microsoft.AspNetCore.Identity
@using WorkshopManager.Model.DataModels
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav ms-auto align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        string roleIcon = "";
        string roleName = "";
        string badgeColor = "";

        if (user is Owner)
        {
            roleIcon = "fa-crown";
            roleName = "Owner";
            badgeColor = "bg-warning text-dark";
        }
        else if (user is Mechanic)
        {
            roleIcon = "fa-wrench";
            roleName = "Mechanik";
            badgeColor = "bg-info text-dark";
        }
        else if (user is Client)
        {
            roleIcon = "fa-user";
            roleName = "Klient";
            badgeColor = "bg-primary";
        }
        else
        {
            roleIcon = "fa-user";
            roleName = "Użytkownik";
            badgeColor = "bg-secondary";
        }

        <li class="nav-item me-3">
            <span class="navbar-text text-white">
                <i class="fas @roleIcon me-1"></i>
                <strong>@User.Identity?.Name</strong>
                <span class="badge @badgeColor ms-2">@roleName</span>
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-sign-out-alt me-1"></i>Wyloguj
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/RegisterClient">
                <i class="fas fa-user-plus me-1"></i>Rejestracja
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt me-1"></i>Logowanie
            </a>
        </li>
    }
</ul>
