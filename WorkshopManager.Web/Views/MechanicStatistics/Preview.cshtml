@model WorkshopManager.ViewModels.MechanicStatisticsViewModel

@{
    ViewData["Title"] = $"Statystyki - {Model.MechanicFullName}";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Statystyki Mechanika: @Model.MechanicFullName</h3>
                    <form asp-action="DownloadPdf" method="post" style="display: inline;">
                        <input type="hidden" name="MechanicId" value="@Model.MechanicId" />
                        <input type="hidden" name="Period" value="@Model.Period.ToLower()" />
                        <button type="submit" class="btn btn-light btn-sm">
                            <i class="bi bi-download"></i> Pobierz PDF
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>Okres:</strong> @Model.Period</p>
                            <p><strong>Od:</strong> @Model.StartDate.ToString("dd.MM.yyyy")</p>
                            <p><strong>Do:</strong> @Model.EndDate.ToString("dd.MM.yyyy")</p>
                        </div>
                    </div>

                    <!-- Podsumowanie -->
                    <h4 class="mb-3">Podsumowanie</h4>
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Łącznie zleceń</h5>
                                    <p class="display-6 text-primary">@Model.TotalOrders</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Zakończone</h5>
                                    <p class="display-6">@Model.CompletedOrders</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Anulowane</h5>
                                    <p class="display-6">@Model.CancelledOrders</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning">
                                <div class="card-body text-center">
                                    <h5 class="card-title">W trakcie</h5>
                                    <p class="display-6">@Model.InProgressOrders</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Łączne zarobki</h5>
                                    <p class="display-4 text-success"><strong>@Model.TotalEarnings.ToString("C")</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Rozkład według statusu -->
                    @if (Model.StatusBreakdown.Any())
                    {
                        <h4 class="mb-3 mt-5">Rozkład zleceń według statusu</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Status</th>
                                        <th class="text-end">Liczba zleceń</th>
                                        <th class="text-end">Zarobki</th>
                                        <th class="text-center">Procent</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stat in Model.StatusBreakdown)
                                    {
                                        var percentage = Model.TotalOrders > 0 ? (stat.Count * 100.0 / Model.TotalOrders) : 0;
                                        <tr>
                                            <td>@stat.Status</td>
                                            <td class="text-end">@stat.Count</td>
                                            <td class="text-end">@stat.TotalEarnings.ToString("C")</td>
                                            <td class="text-center">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar"
                                                         style="width: @percentage%"
                                                         aria-valuenow="@percentage"
                                                         aria-valuemin="0"
                                                         aria-valuemax="100">
                                                        @percentage.ToString("0.0")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <!-- Statystyki dzienne -->
                    @if (Model.DailyStatistics.Any())
                    {
                        <h4 class="mb-3 mt-5">Statystyki dzienne</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Data</th>
                                        <th class="text-end">Wszystkie zlecenia</th>
                                        <th class="text-end">Zakończone</th>
                                        <th class="text-end">Zarobki</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var daily in Model.DailyStatistics)
                                    {
                                        <tr>
                                            <td>@daily.Date.ToString("dd.MM.yyyy (dddd)")</td>
                                            <td class="text-end">@daily.OrdersCount</td>
                                            <td class="text-end">@daily.CompletedCount</td>
                                            <td class="text-end">@daily.Earnings.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-secondary">
                                    <tr>
                                        <th>SUMA:</th>
                                        <th class="text-end">@Model.DailyStatistics.Sum(d => d.OrdersCount)</th>
                                        <th class="text-end">@Model.DailyStatistics.Sum(d => d.CompletedCount)</th>
                                        <th class="text-end">@Model.DailyStatistics.Sum(d => d.Earnings).ToString("C")</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Powrót do generatora
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
