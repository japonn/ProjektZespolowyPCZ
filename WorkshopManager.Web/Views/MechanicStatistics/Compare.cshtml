@model IEnumerable<WorkshopManager.Model.DataModels.Mechanic>

@{
    ViewData["Title"] = "Porównanie Mechaników";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Porównanie Statystyk Mechaników</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CompareGenerate" method="post" id="compareForm" class="needs-validation" novalidate>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label fw-bold">Wybierz mechaników do porównania (minimum 2):</label>
                                <div class="card">
                                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                        @if (Model.Any())
                                        {
                                            <div class="form-check mb-2">
                                                <input type="checkbox" class="form-check-input" id="selectAll">
                                                <label class="form-check-label fw-bold" for="selectAll">
                                                    Zaznacz wszystkich
                                                </label>
                                            </div>
                                            <hr />
                                            @foreach (var mechanic in Model)
                                            {
                                                <div class="form-check mb-2">
                                                    <input type="checkbox" class="form-check-input mechanic-checkbox"
                                                           name="MechanicIds" value="@mechanic.Id" id="mechanic_@mechanic.Id">
                                                    <label class="form-check-label" for="mechanic_@mechanic.Id">
                                                        @mechanic.FirstName @mechanic.LastName
                                                        <small class="text-muted">(Zatrudniony: @mechanic.EmploymentDate.ToString("dd.MM.yyyy"))</small>
                                                    </label>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p class="text-muted">Brak mechaników w systemie.</p>
                                        }
                                    </div>
                                </div>
                                <div class="invalid-feedback d-block" id="mechanicsError" style="display: none !important;">
                                    Wybierz przynajmniej 2 mechaników do porównania.
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="period" class="form-label">Okres</label>
                                <select class="form-select" id="period" name="Period" required>
                                    <option value="day">Dzisiaj</option>
                                    <option value="week">Ten tydzień</option>
                                    <option value="month" selected>Ten miesiąc</option>
                                    <option value="year">Ten rok</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-grid gap-2 d-md-flex">
                                    <button type="submit" class="btn btn-success" id="btnPreview">
                                        <i class="bi bi-eye"></i> Podgląd porównania
                                    </button>
                                    <button type="submit" formaction="@Url.Action("CompareDownloadPdf")" class="btn btn-primary" id="btnPdf">
                                        <i class="bi bi-file-earmark-pdf"></i> Pobierz PDF
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-arrow-left"></i> Powrót
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Lista wszystkich mechaników</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Imię i Nazwisko</th>
                                        <th>Data zatrudnienia</th>
                                        <th>Akcje</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var mechanic in Model)
                                    {
                                        <tr>
                                            <td>@mechanic.Id</td>
                                            <td>@mechanic.FirstName @mechanic.LastName</td>
                                            <td>@mechanic.EmploymentDate.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-success select-mechanic"
                                                        data-mechanic-id="@mechanic.Id">
                                                    <i class="bi bi-check2-square"></i> Zaznacz
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select All functionality
        document.getElementById('selectAll')?.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.mechanic-checkbox');
            checkboxes.forEach(cb => cb.checked = this.checked);
            validateSelection();
        });

        // Individual checkbox change
        document.querySelectorAll('.mechanic-checkbox').forEach(cb => {
            cb.addEventListener('change', validateSelection);
        });

        // Select from table
        document.querySelectorAll('.select-mechanic').forEach(btn => {
            btn.addEventListener('click', function() {
                const mechanicId = this.getAttribute('data-mechanic-id');
                const checkbox = document.getElementById('mechanic_' + mechanicId);
                if (checkbox) {
                    checkbox.checked = !checkbox.checked;
                    validateSelection();
                }
            });
        });

        function validateSelection() {
            const selectedCount = document.querySelectorAll('.mechanic-checkbox:checked').length;
            const errorDiv = document.getElementById('mechanicsError');

            if (selectedCount < 2) {
                errorDiv.style.display = 'block';
                document.getElementById('btnPreview').disabled = true;
                document.getElementById('btnPdf').disabled = true;
            } else {
                errorDiv.style.display = 'none';
                document.getElementById('btnPreview').disabled = false;
                document.getElementById('btnPdf').disabled = false;
            }
        }

        // Initial validation
        validateSelection();

        // Form validation
        document.getElementById('compareForm').addEventListener('submit', function(e) {
            const selectedCount = document.querySelectorAll('.mechanic-checkbox:checked').length;
            if (selectedCount < 2) {
                e.preventDefault();
                alert('Wybierz przynajmniej 2 mechaników do porównania.');
                return false;
            }
        });
    </script>
}
