@{
    ViewData["Title"] = "Panel Właściciela";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h1>Jesteś zalogowany jako: Owner</h1>
                    <p class="lead mt-3">Witaj, @User.Identity?.Name!</p>
                    <a asp-controller="Owner"
                        asp-action="Clients"
                        class="btn btn-primary mt-4">
                        Zobacz listę klientów
                    </a>
                    <a asp-controller="Mechanic"
                        asp-action="Create"
                        class="btn btn-primary mt-3">
                        Dodaj mechanika
                    </a>
                    <a asp-controller="Mechanic"
                        asp-action="List"
                        class="btn btn-secondary mt-2">
                        Lista mechaników
                    </a>
                    <a asp-controller="OwnerOrders"
                       asp-action="Index"
                       class="btn btn-outline-primary mt-3">
                        Zlecenia od klientów
                    </a>
                    <a asp-controller="MechanicStatistics"
                       asp-action="Index"
                       class="btn btn-info mt-3">
                        Statystyki mechaników
                    </a>
                    <a asp-controller="MechanicStatistics"
                       asp-action="Compare"
                       class="btn btn-warning mt-2">
                        Porównaj mechaników
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
