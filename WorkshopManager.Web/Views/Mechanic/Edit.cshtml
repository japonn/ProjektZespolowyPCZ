@model WorkshopManager.ViewModels.MechanicCreateViewModel

@{
    ViewData["Title"] = "Edytuj mechanika";
}

<div class="container mt-4">
    <h2>Edytuj mechanika</h2>

    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Imię</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Nazwisko</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="List" class="btn btn-secondary ms-2">Powrót</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
