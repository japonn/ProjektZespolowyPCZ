@model IEnumerable<WorkshopManager.Model.DataModels.RepairOrder>
@using WorkshopManager.Web.Helpers

@{
    ViewData["Title"] = "Zlecenia klientów";
}

<h2>Zlecenia klientów</h2>

<table class="table">
    <thead>
        <tr>
            <th>Numer zlecenia</th>
            <th>Klient</th>
            <th>Numer rejestracyjny</th>
            <th>Status</th>
            <th>Mechanik</th>
            <th>Wycena brutto</th>
            <th>Kwota do zapłaty</th>
            <th>Data zgłoszenia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@(order.Client.FirstName + " " + order.Client.LastName)</td>
                <td>@order.RegistrationNumber</td>
                <td>@Html.Raw(StatusHelper.GetStatusBadgeHtml(order.Status))</td>
                <td>
                    @if (order.Mechanic != null)
                    {
                        @($"{order.Mechanic.FirstName} {order.Mechanic.LastName}")
                    }
                    else
                    {
                        <span class="text-muted">nieprzydzielone</span>
                    }
                </td>
                <td>
                    @if (order.EntryEstimatedCost.HasValue && order.VatRate.HasValue)
                    {
                        var netto = order.EntryEstimatedCost.Value;
                        var vat = (netto * order.VatRate.Value) / 100;
                        var brutto = netto + vat;
                        <span>@brutto.ToString("N2") PLN</span>
                    }
                    else
                    {
                        <span class="text-muted">brak wyceny</span>
                    }
                </td>
                <td>
                    @if (order.EntryEstimatedCost.HasValue && order.VatRate.HasValue)
                    {
                        var netto = order.EntryEstimatedCost.Value;
                        var totalAdditionalCosts = order.AdditionalCosts?.Sum(ac => ac.Cost) ?? 0;
                        var totalNetto = netto + totalAdditionalCosts;
                        var totalVat = (totalNetto * order.VatRate.Value) / 100;
                        var totalBrutto = totalNetto + totalVat;

                        if (totalAdditionalCosts > 0)
                        {
                            <span class="fw-bold text-danger">@totalBrutto.ToString("N2") PLN</span>
                            <br />
                            <small class="text-muted">(+@totalAdditionalCosts.ToString("N2") PLN dodatkowe)</small>
                        }
                        else
                        {
                            <span>@totalBrutto.ToString("N2") PLN</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">brak wyceny</span>
                    }
                </td>
                <td>@order.SubmissionDate.ToShortDateString()</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Assign"
                           asp-route-id="@order.Id"
                           class="btn btn-sm btn-primary"
                           title="Przydziel mechanika / zmień wycenę">
                            <i class="fas fa-edit"></i> Edytuj
                        </a>
                        @if (order.EntryEstimatedCost.HasValue && order.VatRate.HasValue)
                        {
                            <a asp-action="AddAdditionalCost"
                               asp-route-id="@order.Id"
                               class="btn btn-sm btn-warning"
                               title="Dodaj koszty dodatkowe">
                                <i class="fas fa-plus-circle"></i> Koszty +
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
